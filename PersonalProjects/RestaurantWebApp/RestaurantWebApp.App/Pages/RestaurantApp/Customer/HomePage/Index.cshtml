@page
@model RestaurantApp.Customer.HomePage.IndexModel

<div class="row container pb-3 backgroundWhite">
	@foreach(var category in Model.CategoryList)
	{		
		<h2 class="text-success pl-1"><b>@category.Name</b></h2>
		<div class="col-12">
			<div class="row my-3">
				@foreach(var menuItem in Model.MenuItemList.Where(u=>u.CategoryId == category.Id))
				{
				<div class="col-lg-4 col-md-6 pb-4 filter">
					<div class="card bg-danger rounded shadow-sm" style="border:1px">
						<div class="card-body pb-1 row">
							<div class="col-8 h5">@menuItem.Name</div>
								<div class="col-4 text-end"><span class="text-info h4 text-black">£@menuItem.Price</span></div>
						</div>
						<img class="card-img-top img-fluid d-block mx-auto mb-3" src="@menuItem.ImageURL" alt="menuitem image">
						<div class="card-body p-1 px-3 row">
							<div class="col-6">
									<span class="badge p-2 border w-100 bg-warning ">@menuItem.Category.Name</span>
							</div>
							<div class="col-6 border-primary">
								<span class="badge p-2 border w-100 bg-info ">@menuItem.FoodType.Name</span>
							</div>
							<div class="col-12 pt-2" style="font-size:13px; text-align:justify">
								<p> @Html.Raw(menuItem.Description)</p>
							</div>
							<div class="col-12 p-1">
								<a asp-page="Details" asp-route-id="@menuItem.Id" class="btn btn-dark form-control btn-sm p-2" style="height:40px">View Details</a>
							</div>
						</div>
					</div>
				</div>
				}
			</div>
		</div>
	}
</div>

