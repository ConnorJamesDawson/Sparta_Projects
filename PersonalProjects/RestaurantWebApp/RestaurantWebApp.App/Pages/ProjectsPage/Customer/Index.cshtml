@page
@model ProjectsPage.Customer.IndexModel

<div class="row container pb-3 backgroundWhite">
	@foreach (var project in Model.ProjectList)
	{
        <div class="card mb-3">
            <h3 class="card-header" style="text-align:center" >@project.Name</h3>
            <svg xmlns="@project.ImageURL" class="d-block user-select-none" width="100%" height="200" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
                <rect width="100%" height="100%" fill="#868e96">
                </rect>
                <img src="@project.ImageURL" alt="menuitem image">

            </svg>
            <div class="card-body">
                <p class="card-text">@project.Description</p>
            </div>
            <h4 class="card-header" style="text-align:center">Key Skills Used:</h4>
            <ul class="list-group list-group-flush" style="text-align:center">
                <li class="list-group-item">ASP Razor Pages</li>
                <li class="list-group-item">SQL Database</li>
                <li class="list-group-item">Unit of Work Design Pattern</li>
            </ul>
            <div class="card-body">
                <a asp-page="/ProjectsPage/Admin/Edit" asp-route-id="@project.Id" class="card-link">
                    View Details
                </a>
                <a href="#" class="card-link">Edit Card</a>
            </div>
        </div>
	}
</div>